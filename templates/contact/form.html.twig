{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

{% include "include/_flashes.html.twig" %}

  <h1 class="text-center my-4">Contactez-nous !</h1>

    <div class="row">
        <div class="col-6 mx-auto">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-6">{{ form_row(form.prenom) }}</div>
                <div class="col-6">{{ form_row(form.nom) }}</div>
            </div>

            {{ form_row(form.email) }}
            {{ form_row(form.sujet) }}
            {{ form_row(form.message) }}
            

            {{ form_row(form.submit) }}

            {{ form_end(form) }} 
        </div>
    </div>

{% endblock %}
