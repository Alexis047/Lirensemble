{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %} 

{% include "include/_flashes.html.twig" %}

  <h1 class="text-center my-4">Inscrivez-vous !</h1>

    <div class="row">
        <div class="col-6 mx-auto">

            {{ form_start(form) }}

            <div class="row">
                <div class="col-6">{{ form_row(form.prenom) }}</div>
                <div class="col-6">{{ form_row(form.nom) }}</div>
            </div>

            {{ form_row(form.pseudo) }}
            {{ form_row(form.adresse) }}
            {{ form_row(form.cp) }}
            {{ form_row(form.ville) }}

            <div class="row">
                <div class="col-6">{{ form_row(form.email) }}</div>
                <div class="col-6">{{ form_row(form.password) }}</div>
            </div>

            {{ form_row(form.submit) }}

            {{ form_end(form) }} 
        </div>
    </div>

{% endblock %}
