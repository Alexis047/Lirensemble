{% extends "base.html.twig" %}

{% block title %}Gérer les emprunts
{% endblock %}

{% block body %}

	<h1 class="text-center my-3">Gestion des emprunts</h1>

	{% include "include/_flashes.html.twig" %}

	<div class="row">
		<div class="col-11 mx-auto">
			<table class="table table-hover">
				<thead class="table-dark">
					<tr>
						<th>#</th>
						<th># Livre</th>
						<th>Propriétaire du livre</th>
						<th>Titre du livre</th>
						<th># Emprunteur</th>
						<th>Pseudo de l'emprunteur</th>
						<th>Emprunté le :</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for emprunt in emprunts %}
						<tr>
							<td>{{ emprunt.id }}</td>
							<td>{{ emprunt.livre.id }}</td>
							<td>{{ emprunt.livre.proprietaire.pseudo }}</td>
							<td>{{ emprunt.livre.titre }}</td>
							<td>{{ emprunt.emprunteur.id }}</td>
							<td>{{ emprunt.emprunteur.pseudo }}</td>
							<td>{{ emprunt.createdAt | date('d/m/Y') }}</td>
							<td>
								<a href="{{ path('cancel_emprunt', {'id': emprunt.id}) }}" title="Annuler l'emprunt" class="text-center align-middle text-danger" onclick="return confirm('Voulez-vous vraiment annuler cet emprunt ?')">
									<i class="fa-solid fa-trash"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="11" class="bg-warning text-center">Aucun emprunt en cours</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
