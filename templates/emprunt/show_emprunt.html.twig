{% extends 'base.html.twig' %}

{% block title %}Mon emprunt{% endblock %}

{% block body %}

    <h1 class="text-center my-3">Gérer mon emprunt</h1>

    {% include "include/_flashes.html.twig" %}

    <div class="row mb-3 d-flex justify-content-around">

        {%  for monEmprunt in monEmprunt %}

            <div class="col-3 mx-2">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('img/photo-standard.jpg') }}" class="card-img-top" alt="présentation" style="object-fit: contain;" width="150" height="220">
                    <div class="card-body">
                        <h5 class="card-title">{{ monEmprunt.livre.titre }}</h5>
                        <h6 class="card-title">{{ monEmprunt.livre.genre }} | {{ monEmprunt.livre.auteur }}</h6>
                        <p class="card-text">{{ monEmprunt.livre.resume | length > 50 ? monEmprunt.livre.resume | slice(0,50) ~ '...' : monEmprunt.livre.resume }}</p>
                        <a href="{#{{ path('add_item', {'id': livre.id}) }}#}" class="col-12 btn btn-warning text-center"><i class="fa-solid fa-cart-plus"></i></a>
                    </div>
                </div>
            </div>

        {% else %}
            <h3 class="text-center">Aucun emprunt en cours</h3>
        {% endfor %}

    </div>


{% endblock %}
